/dts-v1/;

/ {
	description = "Kernel and rootfs components for Raspberry Pi 4 environment";

	images {
		linux {
			description = "Linux kernel";
			data = /incbin/("../linux/linux/build/rpi4/arch/arm/boot/Image");
			type = "kernel";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x01008000>;
			entry = <0x01008000>;
		};

		fdt_linux {
			description = "Linux device tree blob";
			data = /incbin/("../linux/linux/build/rpi4/arch/arm/boot/dts/bcm2711-rpi-4-b.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			load = <0x10a00000>;
		};

		initrd {
			description = "Initial rootfs (initrd)";
			data = /incbin/("../rootfs/board/rpi4/initrd.cpio");
			type = "ramdisk";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x10c00000>;
		};
		so3 {
			description = "so3 kernel";
			data = /incbin/("../so3/so3/so3.bin");
			type ="kernel";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x01008000>;
			//entry = <0x41008000>;
		};
		so3_fdt {
			description = "so3 device tree blob";
			data = /incbin/("../so3/so3/dts/virt32.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			load = <0x04c00000>;
		};

		so3_rootfs {
			description = "so3 Rootfs";
			data = /incbin/("../rootfs/board/virt32/rootfs.fat");
			type = "ramdisk";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x04a00000>;
		};
	};

	configurations {
		default = "so3";

		conf_linux {
			description = "Linux on Raspberry Pi 4";
			kernel = "linux";
			fdt = "fdt_linux";
			ramdisk = "initrd";
		};
		so3 {
			description = "so3 kernel image including device tree";
			kernel = "so3";
			fdt = "so3_fdt";
			ramdisk = "so3_rootfs";
		};
	};

};
